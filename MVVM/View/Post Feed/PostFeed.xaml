<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MVVM.View_Models.Post_Feed"
             x:DataType="viewmodel:PostFeedViewModel"
             x:Class="MVVM.View.Post_Feed.PostFeed"
             Title="Post Feed">
    <ScrollView>
        <VerticalStackLayout>

            <VerticalStackLayout>
                <Image Source="{AppThemeBinding Dark=postfeeddark.png, Light=postfeedlight.png}"
                       WidthRequest="{OnPlatform WinUI=1600}"
                       HeightRequest="{OnPlatform WinUI=900}"
                       x:Name="bannerImage"/>
                <Label Text="{Binding SearchQueryText}"
                       x:Name="introductionLabel"
                       HorizontalOptions="Center" 
                       FontAttributes="Bold"
                       FontFamily="Kollektif"
                       FontSize="{OnPlatform Android=25, iOS=25, WinUI=36}"
                       Margin="25"
                       ></Label>
                <Frame BackgroundColor="#676767"
                   Margin="40,0,40,0"
                       x:Name="mainFrame"
                       CornerRadius="20"
                       Padding="30,0,0,30"
                   HeightRequest="400">
                    <VerticalStackLayout>
                        <Frame BackgroundColor="#414141" Margin="20" WidthRequest="400">
                            <Label Text="Noroc"></Label></Frame>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>