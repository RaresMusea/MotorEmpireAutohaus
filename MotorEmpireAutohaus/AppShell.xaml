<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MotorEmpireAutohaus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MotorEmpireAutohaus.View"
    xmlns:local="clr-namespace:MotorEmpireAutohaus"
    xmlns:signupPage="clr-namespace:MotorEmpireAutohaus.View"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="True">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:LogIn}"
        FlyoutIcon="False"
        Shell.FlyoutBehavior="Disabled"
        FlyoutItemIsVisible="False"
        Route="LogIn" />

    <ShellContent
        Title=""
        FlyoutIcon="False"
        Shell.FlyoutBehavior="Disabled"
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate local:SignUp}"
        Route="SignUp" />

    <!--<ShellContent
        Title="asdasd"
        ContentTemplate="{DataTemplate view:Feed}"
        Route="Feed"/>-->

    <TabBar Route="Feed"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Feed" ContentTemplate="{DataTemplate view:Feed}"></ShellContent>
        <ShellContent Title="Main" ContentTemplate="{DataTemplate view:Upload}"></ShellContent>
        <ShellContent Title="Search" ContentTemplate="{DataTemplate view:Search}"></ShellContent>
    </TabBar>
</Shell>
