<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MotorEmpireAutohaus.View_Model"
             x:DataType="viewmodel:FeedViewModel"
             x:Class="MotorEmpireAutohaus.View.Feed"
             Title="Feed"
             >
    <VerticalStackLayout>
        <Label 
            Text="Feed"
            FontAttributes="Bold"
            FontSize="34"
            Margin="15"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Update picture to Firebase"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="10"
                Command="{Binding UpdateFileToFirebaseCommand}"
                />
        <Image Source="{Binding ImageUrl}" HorizontalOptions="Center" Margin="20" WidthRequest="600" HeightRequest="400"></Image>
    </VerticalStackLayout>
</ContentPage>